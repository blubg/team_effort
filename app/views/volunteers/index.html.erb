<p id="notice"><%= notice %></p>

<h1>Volunteers</h1>

<div>
  <%= form_tag(volunteers_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
  <% end %>
</div>

<div>
  <% if @volunteers.present? %>
    <% @volunteers %>
  <% else %>
    <p>There are no Volunteers containing the term(s) <%= params[:search] %>.</p>
  <% end %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %></td>
        <td><%= volunteer.last_name %></td>
        <td><%= volunteer.email %></td>
        <td><%= volunteer.phone_number %></td>
        <td><%if volunteer.status == true %>
              Volunteer
            <%else%>
              Member
            <%end%>
        </td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
